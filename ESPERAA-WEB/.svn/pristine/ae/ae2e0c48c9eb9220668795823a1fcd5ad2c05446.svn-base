<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<fieldset>
	<legend>Liste des catégories existantes</legend>
	<c:if test="${empty listeCategories}">
		<i>Aucune catégorie existante</i>
	</c:if>
	<c:if test="${!empty listeCategories}">
		<ul>
			<c:forEach var="cat" items="${listeCategoriesDto}">
				<c:url value="/Admin/Rechercher" var="afficherCategorie"> >
					<c:param name="categorie" value="${cat.titreCategorie}"/>
				</c:url>
				<li>
					<a href="<c:out value="${afficherCategorie}" />"><c:out value="${cat.titreCategorie}" /> </a>
					<br/>
					Nombre de projets à ce jour <c:out value="${cat.nbProjets}"></c:out>
				</li>
			</c:forEach>
		</ul>
	</c:if>
</fieldset>